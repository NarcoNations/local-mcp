{
  "name": "mcp-nn",
  "version": "1.0.0",
  "main": "index.js",
  "bin": {
    "mcp": "./dist/cli.js"
  },
  "scripts": {
    "test": "vitest run",
    "dev": "concurrently -n mcp,http -c blue,green \"tsx src/server.ts\" \"tsx src/http.ts\"",
    "start": "node --enable-source-maps dist/http.js",
    "build": "tsc -p tsconfig.json && node scripts/copy-static.mjs",
    "mcp": "tsx src/cli.ts",
    "summary:daily": "ts-node scripts/daily-summary.ts",
    "perf:smoke": "ts-node scripts/perf-smoke.ts",
    "models:download": "node scripts/prefetch-model.mjs",
    "clean": "rimraf .mcp-nn dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "chatgpt:to-md": "ts-node scripts/chatgpt-export-to-md.ts",
    "chatgpt:index": "ts-node scripts/chatgpt-export-to-md.ts ./fixtures/chatgpt-export-sample && ts-node src/cli-index.ts ./docs/chatgpt-export-md",
    "chatgpt:quickstart": "npm run chatgpt:to-md -- ~/Downloads/chatgpt-export && npm run index -- ./docs/chatgpt-export-md",
    "dev:mcp": "tsx src/server.ts",
    "dev:http": "tsx src/http.ts",
    "start:mcp": "node --enable-source-maps dist/server.js"
  },
  "keywords": [],
