{
  "name": "mcp-nn",
  "version": "1.1.0",
  "type": "module",
  "private": true,
  "description": "Offline MCP server for NarcoNations.org local research search.",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "start": "node --enable-source-maps dist/server.js",
    "build": "tsc -p tsconfig.json",
    "index": "ts-node src/cli-index.ts",
    "watch": "ts-node src/cli-watch.ts",
    "test": "vitest run",
    "models:download": "node scripts/prefetch-model.mjs",
    "clean": "rimraf .mcp-nn dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "chatgpt:to-md": "ts-node scripts/chatgpt-export-to-md.ts",
    "chatgpt:index": "ts-node scripts/chatgpt-export-to-md.ts ./fixtures/chatgpt-export-sample && ts-node src/cli-index.ts ./docs/chatgpt-export-md",
    "chatgpt:quickstart": "npm run chatgpt:to-md -- ~/Downloads/chatgpt-export && npm run index -- ./docs/chatgpt-export-md"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "@xenova/transformers": "^2.16.0",
    "adm-zip": "^0.5.12",
    "chokidar": "^3.6.0",
    "fast-glob": "^3.3.2",
    "fast-xml-parser": "^4.4.0",
    "flexsearch": "^0.7.43",
    "gray-matter": "^4.0.3",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "source-map-support": "^0.5.21",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/flexsearch": "^0.7.3",
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
