{
  "name": "Daily Index Sweep",
  "nodes": [
    {
      "id": "1",
      "name": "Cron",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [260, 280],
      "parameters": {
        "triggerTimes": [
          {
            "mode": "everyDay",
            "hour": 2,
            "minute": 0
          }
        ]
      }
    },
    {
      "id": "2",
      "name": "Execute Command",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [520, 280],
      "parameters": {
        "command": "cd /opt/mcp-memory && npm run mcp -- index"
      }
    }
  ],
  "connections": {
    "Cron": {
      "main": [
        [
          {
            "node": "Execute Command",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
