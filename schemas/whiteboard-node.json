{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Whiteboard Node",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "type": { "type": "string", "enum": ["task", "file", "idea", "component"] },
    "links": { "type": "array", "items": { "type": "string" } },
    "meta": { "type": "object" }
  },
  "required": ["id", "title", "type"]
}
